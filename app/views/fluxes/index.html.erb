
<div class="container">
  <%= simple_form_for @flux do |f| %>
    <%= f.input :Title %>
    <%= f.input :Url %>
    <%= f.button :submit %>
  <% end %>
  <div class="row">
    <% @fluxes.each do |flux| %>
      <div class="col-6">
        <ul>
          <% flux.articles.each do |article| %>
            <li>
              <a href="<% article.Url%>">
                <div>
                  <p><%= article.Title %></p>
                  <% if article.Lu == 0 %>
                    <p>Marqué comme non Lu</p>
                  <% else %>
                    <p>Marqué comme Lu</p>
                  <% end %>
                </div>
              </a>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
